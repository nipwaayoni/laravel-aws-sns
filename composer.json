{
    "name": "miamioh/sns-handler",
    "description": "Handle SNS subscription requests and messages",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.3",
      	"ext-json": "*",
        "aws/aws-php-sns-message-validator": "^1.6"
    },
    "require-dev" : {
        "roave/security-advisories": "dev-latest",
        "guzzlehttp/guzzle": "^7.2",
        "orchestra/testbench": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "MiamiOH\\SnsHandler\\" : "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\MiamiOH\\SnsHandler\\": "tests/"
        }
    },
    "keywords": [
        "laravel",
        "sns",
	    "messages"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel" : {
            "providers": [
                "MiamiOH\\SnsHandler\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "cs-fix": [
            "tools/php-cs-fixer fix --diff"
        ],
        "phpstan": [
            "tools/phpstan analyze"
        ]
    }
}
